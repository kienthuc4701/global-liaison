---
import "virtual:uno.css";
import "@unocss/reset/tailwind.css";

import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import CommondHead from "@/components/CommondHead.astro";

const { pageTitle = "Home Page" }: Record<string, any> = Astro.props;
---

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@100;300;400;500;600;700;800;900&display=swap");
  /* Unscoped, delivered as-is to the browser.
     Applies to all <h1> tags on your site. */
  body {
    font-family: "Poppins";
    background-color: rgba(39, 183, 245, 0.125);
  }
  img {
    max-width: 100%;
    object-fit: cover;
  }
</style>
<html lang="en">
  <CommondHead title={pageTitle}/>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
  <script>
    import '@/main.ts'
  </script>
</html>
